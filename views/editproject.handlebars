<div class="row">
  <div class="col-md-12">
    <form class="form editproject-form" data-id="{{id}}">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-input" type="text" id="name" value="{{name}}" />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input
          class="form-input"
          type="text"
          id="description"
          value="{{description}}"
        />
      </div>
      <div class="form-group">
        <label for="date">Due Date</label>
        <input class="form-input" type="text" id="date" 
        value="{{due_date}}"/>
      </div>
      <div class="row">
        <div class="col-md-11">
          <div class="form-group">
            <button class="btn btn-primary" type="submit">update</button>
          </div>
        </div>
        <div class="col-md-1">
          <div class="form-group">
            <button
              class="btn btn-primary delete-post-button"
              type="delete"
              data-id="{{id}}"
            >delete</button>
          </div>
        </div>
      </div>
    </form>

  </div>
</div>

<script src="/js/editpost.js"></script>