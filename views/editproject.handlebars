<div class="row">
  <div class="col-md-12">
    <form class="form editpost-form" data-id="{{id}}">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-input" type="text" id="title" value="{{name}}" />
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <input
          class="form-input"
          type="text"
          id="content"
          value="{{description}}"
        />
      </div>
      <div class="row">
        <div class="col-md-11">
          <div class="form-group">
            <button class="btn btn-primary" type="submit">update</button>
          </div>
        </div>
        <div class="col-md-1">
          <div class="form-group">
            <button
              class="btn btn-primary delete-post-button"
              type="delete"
              data-id="{{id}}"
            >delete</button>
          </div>
        </div>
      </div>
    </form>

  </div>
</div>

<script src="/js/editpost.js"></script>